extends ../Layout/common.pug
block login
    .loginPage.container.Content
        h1 Login
        if errors
            each error in errors
                .alert.alert-danger= error
        form(method="POST", class="loginForm")
            .form-group
                label(for="name") Username
                input#name.form-control(name="name",type="text",placeholder='Enter Username', value =values ? values.name: "")
            .form-group    
                label(for="password") Password
                input#password.form-control(name="password",type="password",placeholder='Enter Password',value = values? values.password :"")
                button(class="btn btn-primary mt-4") Login